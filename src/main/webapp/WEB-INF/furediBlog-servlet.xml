<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-2.5.xsd"
	default-autowire="byName">
	<context:component-scan
		base-package="hu.furediblog.controller, hu.furediblog.dao.repository, hu.furediblog.service, hu.furediblog.mapper" />
	
	<bean id="jspViewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass"
			value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/WEB-INF/resources/jsp/" />
		<property name="suffix" value=".jsp" />
	</bean>
	
	<bean id="AuthorDao" class="hu.furediblog.dao.AuthorRepository"></bean>
	
	<bean id="authorService" class="hu.furediblog.service.AuthorsServiceImpl">
		<property name="authorDao" ref="AuthorDao"></property>
	</bean>	

	<bean id="EntryDao" class="hu.furediblog.dao.EntryRepository"></bean>
	
	<bean id="entryService" class="hu.furediblog.service.EntryServiceImpl">
		<property name="entryDao" ref="EntryDao"></property>
	</bean>	
</beans>